{
    "extends": "./node_modules/@englercj/code-style/.eslintrc.json",
    "env": {
        "commonjs": true,
        "browser": true
    },
    "globals": {
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "new-cap": [2, { "newIsCap": true, "capIsNew": false, "properties": false }],
        "curly": [2, "multi-line"],
        "brace-style": [2, "allman"],
        "no-restricted-syntax": [2, "DebuggerStatement", "EmptyStatement", "WithStatement"],
        "no-magic-numbers": 0,
        "no-labels": 0
    }
}
