{
  "name": "@fae/core",
  "version": "1.0.0",
  "description": "A next-gen 2D renderer for the web.",
  "author": "Chad Engler <chad@pantherdev.com>",
  "license": "MIT",
  "main": "./dist/fae.js",
  "homepage": "https://github.com/englercj/fae#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/englercj/fae.git"
  },
  "bugs": {
    "url": "https://github.com/englercj/fae/issues"
  },
  "directories": {
    "lib": "./src",
    "example": "./examples"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "hash": "git rev-parse HEAD > .commit",
    "build": "set NODE_ENV=production && npm run clean && npm run hash && webpack -p --config ./build/webpack.config.js --output-filename fae.min.js --progress",
    "dev": " npm run clean && npm run hash && webpack -d --config ./build/webpack.config.js --output-filename fae.js --progress --colors",
    "watch": "npm run dev -- --watch",
    "lint": "eslint src/ && eslint plugins/",
    "start": "npm run build",
    "test": "npm run test-dev -- --single-run",
    "test-dev": "npm run dev && karma start build/karma.conf.js"
  },
  "dependencies": {
    "bit-twiddle": "^1.0.2",
    "ismobilejs": "^0.4.0",
    "mini-signals": "^1.1.1"
  },
  "devDependencies": {
    "@englercj/code-style": "^1.0.4",
    "async": "^2.0.0-rc.6",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015-loose": "^7.0.0",
    "benchmark": "^2.1.0",
    "chai": "^3.5.0",
    "eslint": "^3.0.0",
    "karma": "^1.1.1",
    "karma-browserstack-launcher": "^1.0.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-sauce-launcher": "^1.0.0",
    "karma-sinon-chai": "^1.2.3",
    "mocha": "^2.5.3",
    "preprocess-loader": "^0.2.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.1",
    "webpack-glsl-loader": "^1.0.1"
  }
}
